{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block main %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Reset your password</h1>

    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
               Entrer votre adresse mail et
                nous allons vous envoyer un lien pour réinitialiser votre mot de passe
            </small>
        </div>

        <button class="btn btn-primary">Réinitialisation Mot de passe</button>

        <button class="btn btn-primary" onclick="location.href='{{ path('login') }}'" >Se connecter</button>

    {{ form_end(requestForm) }}
{% endblock %}
