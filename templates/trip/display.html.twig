{% extends 'base.html.twig' %}

{% block main %}

<h2>Afficher une sortie</h2>

<div>
    <p>Nom de la sortie: {{trip.name}}</p>
    <p>Date et heure de la sortie: {{trip.startTime|date("d-m-Y H:i")}}</p>
    <p>Date limite d'inscription: {{trip.registrationTimeLimit|date("d-m-Y")}}</p>
    <p>Nombre de places: {{trip.maxRegistration}}</p>
    <p>Dur√©e: {{trip.lenght}}</p>
    <p>Description et infos: {{trip.tripInfos}}</p>
</div>

<div>
    <p>Campus: </p>
    <p>Lieu: </p>
    <p>Rue: </p>
    <p>Code postal: </p>
    <p>Latitude: </p>
    <p>Longitude: </p>
</div>

<h3>Liste des participants inscrits:</h3>

    <table>
        <thead>
        <tr>
            <th>Pseudo</th>
            <th>Nom</th>
        </tr>
        </thead>

        <tbody>
        {% for user in trip.users %}
        <tr>
            <td><a href="{{path('otherProfile', {'id':user.id})}}">{{user.pseudo}}</a></td>
            <td><a href="{{path('otherProfile', {'id':user.id})}}">{{user.name}}</a></td>
        </tr>
        {%endfor%}
        </tbody>
    </table>

{% endblock %}